<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/UserInfo', user: @user %>
      <%= render 'layouts/CreateBook',  book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
    		<h2>Book detail</h2>
  		  <table class="table">
    		  <tbody>
    		    <tr>
    		      <td>
    		      <%= link_to book_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg"%>
                <br><%= @user.name %>
              <% end %>
              </td>

              <td><%= link_to @book.title, book_path(@user.id) %></td>

              <td><%= @book.body %></td>

              <% if @user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book) %></td>
                <td><%= link_to "Destroy",book_path(@book),  method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>
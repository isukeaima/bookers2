<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <tbody>
  <tr>
    <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
	  <th><%= @user.introduction %></th>
	  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  </tr>
</tbody>

<h1>Books</h1>
<body>
  <table>


<thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
</thead>

  <tbody>
    <% @books.each do |list| %>
      <tr>

        <td><%= list.title %></td>

        <td><%= list.body %></td>
      </tr>
    <% end %>
  </tbody>





</table>
</body>



<h2>New book</h2>
<div class="field">


<%= form_with model: @book,url:'books',local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
<%= f.submit 'Create Book' %>
  <% end %>

</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/UserInfo', user: @user %>
      <%= render 'layouts/CreateBook', book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |list| %>
              <tr>
                <td>
                  <%= link_to book_path(list.user) do %>
                  <%= attachment_image_tag list.user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg"%>
                  <br><%= list.user.name %>
                  <% end %>
                </td>

                <td><%= link_to list.title, book_path(list.user.id) %></td>

                <td><%= list.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
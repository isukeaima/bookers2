<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
  <div class="col-md-3">
    <%= render 'layouts/UserInfo', user: @user %>
    <%= render 'layouts/CreateBook',  book: @book %>
</div>

<div class="col-md-9">
<h2>Books</h2>
<table class = "table table-hover table-inverse" >
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
</thead>


    <% @books.each do |list| %>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
  <tbody>
        <td><%= link_to list.title, book_path(list.id) %></td>

        <td><%= list.body %></td>

  </tbody>
      </tr>
    <% end %>

</table>











    </div>
  </div>
</div>



<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/UserInfo', user: @user %>
      <%= render 'layouts/CreateBook',  book: @newbook %>
    </div>
  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
            <tbody>
            <% @users.each do |list| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg"%></td>
              <td><%= list.name %></td>
              <td><%= link_to "Show", user_path(@user) %></td>
            </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>

